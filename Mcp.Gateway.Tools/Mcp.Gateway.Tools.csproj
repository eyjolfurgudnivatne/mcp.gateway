<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		
		<!-- NuGet Package Metadata -->
		<PackageId>Mcp.Gateway.Tools</PackageId>
		<Version>1.7.1</Version>
		<Authors>ARKo AS - AHelse Development Team</Authors>
		<Company>ARKo AS</Company>
		<Product>MCP Gateway</Product>
		<Description>Production-ready Model Context Protocol (MCP) Gateway library for .NET 10. Enables AI assistants like GitHub Copilot and Claude Desktop to discover and invoke custom tools via HTTP, WebSocket, SSE, and stdio transports.</Description>
		<Copyright>Copyright (c) 2025 ARKo AS - AHelse Development Team</Copyright>
		<PackageProjectUrl>https://github.com/eyjolfurgudnivatne/mcp.gateway</PackageProjectUrl>
		<RepositoryUrl>https://github.com/eyjolfurgudnivatne/mcp.gateway.git</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>mcp;model-context-protocol;json-rpc;websocket;github-copilot;claude;ai;tools;gateway;dotnet10;pagination;notifications</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageReleaseNotes>v1.7.1 (patch): Backwards compatibility helper and documentation updates. Adds `MCP_PROTOCOL_VERSION` environment variable to allow servers to advertise a configurable protocol version (fallback `2025-11-25`) to support legacy MCP clients during migration. Includes documentation and compatibility guidance for GitHub Copilot (.internal/notes/v1.7.0/github-copilot-compatibility.md). All tests remain passing. See CHANGELOG.md for full details (v1.7.0 major features + v1.7.1 patch).</PackageReleaseNotes>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		
		<!-- Suppress XML documentation warnings for v1.0.1 -->
		<NoWarn>1591</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>
	
	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
